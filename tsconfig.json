{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": "./",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"removeComments": false,
		"rootDir": "./src",
		"paths": {
		},
		"skipLibCheck": false,
		"sourceMap": false,
		"moduleResolution": "node",
		"module": "ES2020",
		"target": "ES2020",
		"lib": ["DOM", "ES2020"]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./dist/**/*.ts",
		"./node_modules/**/*.ts"
	]
}